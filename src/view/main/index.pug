extends ./../layout/main

block content
    div.col-xs-12.col-md-12
        h1 Node - Using Express with Passport.js #{user.name}
    div.col-xs-12.col-md-12
        if (user)
            a(href="/auth/logout") Logout
    div.col-xs-12.col-md-12
        if (user)
            h2 Your are logged in
        else
            h2 Please log in
            a(href="/auth") Click here for login